{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:es-beautifier/standard"
    ],
    "plugins": [
        "es-beautifier"
    ],
    "rules": {
        "arrow-parens": [2, "as-needed"],
        "comma-dangle": "off",
        "curly": 0,
        "es-beautifier/multiline-array-elements": 0,
        "es-beautifier/multiline-object-properties": 0,
        "indent": [2, 2, { "SwitchCase": 1 }],
        "key-spacing": [2, { "align": "colon" }],
        "linebreak-style": [
          "error",
          "unix"
        ],
        "no-console": 2,
        "no-trailing-spaces": [2, { "skipBlankLines": true}],
        "no-unused-vars": [2, { "args": "none" }],
        "padded-blocks": ["error", { "blocks": "never" }],

        "quotes": [
          "error",
          "single"
        ],
        "semi": [
          "error",
          "always",
          { "omitLastInOneLineBlock": true }
        ]
    }
}
