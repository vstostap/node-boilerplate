{
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": [
        "es-beautifier"
    ],
    "extends": [
        "eslint:recommended", "plugin:es-beautifier/standard"
    ],
    "rules": {
        "no-console": 2,
        "curly": 0,
        "es-beautifier/multiline-object-properties": 0,
        "es-beautifier/multiline-array-elements": 0,
        "no-unused-vars": [2, {"args": "none"}],
        "arrow-parens": [2, "as-needed"],
        "key-spacing": [2, { "align": "colon" }],
        "indent": [2,2,{"SwitchCase": 1}],
        "padded-blocks": ["error", { "blocks": "never" }],
        "arrow-parens": [2, "as-needed"],
        "no-trailing-spaces": [2, {"skipBlankLines": true}],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
