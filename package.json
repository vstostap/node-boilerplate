{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "description": "A simple, highly scalable starter boilerplate for Node.js applications",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf build; babel src -d build --copy-files",
    "start": "nodemon --exec babel-node src/index.js",
    "dev": "NODE_ENV='development' npm run-script start",
    "prod": "NODE_ENV='production' npm run-script start",
    "lint": "./node_modules/.bin/eslint -c ./.eslintrc.json src/**/*.js",
    "beautify": "./node_modules/.bin/eslint --fix ./src/**/*.js",
    "test": "jest ./src/**/*.js",
    "coverage": "jest --collectCoverageFrom=./src/**/*.js --coverage src"
  },
  "engines": {
    "node": ">=8.11.3",
    "npm": "5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vstostap/node-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "boilerplate",
    "starter-kit"
  ],
  "author": "Ostap Vasiuta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vstostap/node-boilerplate/issues"
  },
  "homepage": "https://github.com/vstostap/node-boilerplate#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "eslint": "^5.7.0",
    "eslint-plugin-es-beautifier": "^1.0.1",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4"
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "bunyan": "^1.8.12",
    "crypto": "^1.0.1",
    "express": "^4.16.4",
    "http": "0.0.0",
    "https": "^1.0.0",
    "joi": "^14.0.0",
    "mongoose": "^5.3.4"
  }
}
